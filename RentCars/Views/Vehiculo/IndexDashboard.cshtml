@model IEnumerable<Core.Application.ViewModel.Vehiculo.VehiculoViewModel>

@{
    ViewData["Title"] = "IndexDashboard";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<main class="container my-4">
    <h1 class="text-center text-dark mb-4">Lista de Vehículos</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-outline-dark btn-lg">
            Crear Nuevo Vehículo
        </a>
    </div>

    <!-- Tabla de Vehículos -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca)</th>
                    <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                    <th>@Html.DisplayNameFor(model => model.Año)</th>
                    <th>@Html.DisplayNameFor(model => model.PrecioPorDia)</th>
                    <th>Estado</th>
                    <th>@Html.DisplayNameFor(model => model.Transmision)</th>
                    <th>@Html.DisplayNameFor(model => model.Combustible)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroPersonas)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                        <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Año)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrecioPorDia)</td>
                        @if (item.Estado == "Disponible")
                        {
                            <td>Disponible</td>
                        }
                        else
                        {
                            <td>Rentado</td>
                        }
                        <td>@Html.DisplayFor(modelItem => item.Transmision)</td>
                        <td>@Html.DisplayFor(modelItem => item.Combustible)</td>
                        <td>@Html.DisplayFor(modelItem => item.NumeroPersonas)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Vehiculo", new { id = item.VehiculoId })" class="btn btn-outline-warning btn-sm">
                                Editar
                            </a>
                            <a href="@Url.Action("Delete", "Vehiculo", new { id = item.VehiculoId })" class="btn btn-outline-danger btn-sm">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
