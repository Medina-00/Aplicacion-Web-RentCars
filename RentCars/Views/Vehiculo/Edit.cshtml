@model Core.Application.ViewModel.Vehiculo.SaveVehiculoViewModel

@{
    ViewData["Title"] = "Editar Vehículo";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<main class="container my-4">
    <h1 class="text-center mb-4">Editar Vehículo</h1>
    <h4 class="text-center mb-4">Modificar los datos del vehículo</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- VehiculoId (Solo lectura) -->
                <div class="form-group mb-3">
                    <label asp-for="VehiculoId" class="control-label"></label>
                    <input readonly asp-for="VehiculoId" class="form-control" />
                    <span asp-validation-for="VehiculoId" class="text-danger"></span>
                </div>

                <!-- Categoría -->
                <div class="form-group mb-3">
                    <label asp-for="Categoria" class="form-label"></label>
                    <select asp-for="Categoria" class="form-select">
                        <option value="">Seleccione una Categoria</option>
                        <option value="SUV">SUV</option>
                        <option value="Sedán">Sedán</option>
                        <option value="Compacto">Compacto</option>
                        <option value="Eléctrico">Eléctrico</option>
                        <option value="Furgoneta">Furgoneta</option>
                        <option value="Lujo">Lujo</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <!-- Marca -->
                <div class="form-group mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <!-- Modelo -->
                <div class="form-group mb-3">
                    <label asp-for="Modelo" class="form-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <!-- Año -->
                <div class="form-group mb-3">
                    <label asp-for="Año" class="form-label"></label>
                    <input asp-for="Año" class="form-control" />
                    <span asp-validation-for="Año" class="text-danger"></span>
                </div>

                <!-- Precio por Día -->
                <div class="form-group mb-3">
                    <label asp-for="PrecioPorDia" class="form-label"></label>
                    <input asp-for="PrecioPorDia" class="form-control" />
                    <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
                </div>

                <!-- Transmisión -->
                <div class="form-group mb-3">
                    <label asp-for="Transmision" class="form-label"></label>
                    <select asp-for="Transmision" class="form-select">
                        <option value="">Seleccione una transmisión</option>
                        <option value="Automatico">Automático</option>
                        <option value="Mecanico">Mecánico</option>
                    </select>
                    <span asp-validation-for="Transmision" class="text-danger"></span>
                </div>

                <!-- Combustible -->
                <div class="form-group mb-3">
                    <label asp-for="Combustible" class="form-label"></label>
                    <select asp-for="Combustible" class="form-select">
                        <option value="">Tipo de Combustible</option>
                        <option value="Híbrido">Híbrido</option>
                        <option value="Eléctrico">Eléctrico</option>
                        <option value="Diesel">Diesel</option>
                        <option value="Gasolina">Gasolina</option>
                    </select>
                    <span asp-validation-for="Combustible" class="text-danger"></span>
                </div>

                <!-- Número de Personas -->
                <div class="form-group mb-3">
                    <label asp-for="NumeroPersonas" class="form-label"></label>
                    <input asp-for="NumeroPersonas" class="form-control" />
                    <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Archivo (Imagen o documento) -->
                <div class="form-group mb-3">
                    <label asp-for="File" class="form-label"></label>
                    <input asp-for="File" class="form-control" type="file" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <!-- Botón de Envío -->
                <div class="form-group mb-3">
                    <input type="submit" value="Editar Vehículo" class="btn btn-success btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="IndexDashboard" class="btn btn-secondary btn-lg">Volver a la Lista</a>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
