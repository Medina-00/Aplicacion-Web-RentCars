@model Core.Application.ViewModel.User.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(45deg, #0b190f, #6d95e0);
        }

        .login-container {
            position: relative;
            width: 520px;
        }

        .login-card {
            position: relative;
            width: 100%;
            padding: 30px;
            border-radius: 20px;
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 15px 25px rgba(0,0,0,0.05);
            z-index: 2;
        }

        .login-card::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            left: -10px;
            bottom: -10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            z-index: -1;
        }

        .user-icon {
            width: 70px;
            height: 70px;
            background: #1a2b47;
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .user-icon::before {
            content: '';
            width: 35px;
            height: 35px;
            background: transparent;
            border: 3px solid rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            position: relative;
        }

        .user-icon::after {
            content: '';
            width: 20px;
            height: 20px;
            background: transparent;
            border: 3px solid rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            position: absolute;
            top: 60px;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

        .input-group input {
            width: 100%;
            padding: 12px 15px;
            background: rgba(12, 26, 53, 0.4);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 14px;
        }

        .input-group input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .input-group input:focus {
            outline: none;
            background: rgba(12, 26, 53, 0.6);
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            color: rgba(255, 255, 255, 0.8);
            font-size: 14px;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .remember-me input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: #1a2b47;
        }

        .forgot-password {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }

        .forgot-password:hover {
            text-decoration: underline;
        }

        .login-button {
            width: 100%;
            padding: 12px;
            background: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 8px;
            color: #1a2b47;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .login-button:hover {
            background: white;
        }

      
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="user-icon"></div>
                @Html.ValidationSummary(false, "", new { @class = "" })
                @if (Model.HasError)
                {
                    <div class="alert" role="alert">
                    <p>@Model.Error</p>  <!-- Aquí se mostrará el error -->
                    </div>
                }

            <form asp-action="Login">
                <div class="input-group">
                    <input asp-for="Correo" type="email" placeholder="Email ID" required>
                </div>
                <div class="input-group">
                    <input asp-for="Password" type="password" placeholder="Password" required>
                </div>
                <div class="remember-forgot">
                   
                    <a asp-controller="User" asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                </div>
                <button type="submit" class="login-button">LOGIN</button>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
